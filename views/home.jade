extends layout

block content
	div.container-fluid
		div.row
			h1.text-left Welcome #{user.username}.
			div.col-xs-4
								
								
								h4 Polls by #{user.username}
								
								
								
								each item in arr
									li 
										a(href='/displaypoll'+'?name='+item) #{item}
										
								p
								
								h4 Recent Polls
								
								each item in arr_all
									li 
										a(href='/displaypoll'+'?name='+item) #{item}
								
			div.col-xs-6
				
				html.
					
					
					
					
					
					
					
					
					<h4>Create new poll</h4>
